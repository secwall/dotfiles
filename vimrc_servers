set tabstop=4
set shiftwidth=4
set smarttab
set expandtab

" Vundle setup
set nocompatible
filetype off

call plug#begin('~/.vim/plugged')

Plug 'sheerun/vim-polyglot'
Plug 'vim-airline/vim-airline'
Plug 'joshdick/onedark.vim'
Plug 'scrooloose/nerdcommenter'

call plug#end()

filetype plugin indent on

set wrap
set showbreak=\ \ \ \ \ \ >
hi NonText guifg=#0030ff ctermfg=green

set ai
set cin

set backspace=2
set wrapmargin=5

set laststatus=2

set foldenable
set foldmethod=indent

set showmatch
set hlsearch
set incsearch
set ignorecase

set listchars=tab:..
set list

set background=dark
colorscheme onedark
set t_Co=256

set colorcolumn=80

set pastetoggle=<F2>

set number
syntax on
