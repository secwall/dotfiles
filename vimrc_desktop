set tabstop=4
set shiftwidth=4
set smarttab
set expandtab

" Vundle setup
set nocompatible
filetype off

call plug#begin('~/.vim/plugged')

Plug '/usr/local/opt/fzf'
Plug 'sheerun/vim-polyglot'
Plug 'vim-airline/vim-airline'
Plug 'joshdick/onedark.vim'
Plug 'scrooloose/nerdcommenter'
Plug 'fatih/vim-go', { 'do': ':GoUpdateBinaries' }
Plug 'davidhalter/jedi-vim'
Plug 'Shougo/deoplete.nvim', { 'do': ':UpdateRemotePlugins' }
Plug 'zchee/deoplete-jedi'
Plug 'zchee/deoplete-go', {'build': {'unix': 'make'}}
Plug 'Shougo/deoplete-clangx'
Plug 'Shougo/neoinclude.vim'
Plug 'SirVer/ultisnips'
Plug 'jodosha/vim-godebug'
Plug 'w0rp/ale'
Plug 'LucHermitte/lh-vim-lib'
Plug 'LucHermitte/local_vimrc'

call plug#end()

filetype plugin indent on

let g:deoplete#enable_at_startup = 1
let g:ale_lint_on_text_changed = 'never'
let g:ale_lint_on_insert_leave = 0

let g:ale_c_clang_options = '-std=c11 -Wall -isysroot /Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX.sdk'
let g:ale_c_clangtidy_options = '-std=c11 -Wall -isysroot /Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX.sdk'
let g:ale_c_gcc_options = '-std=c11 -Wall -isysroot /Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX.sdk'

let g:ale_cpp_clang_options = '--std=c++20 -stdlib=libc++ -Wall'
let g:ale_cpp_clangtidy_options = '--std=c++20 -stdlib=libc++ -Wall'
let g:ale_cpp_gcc_options = '--std=c++20 -stdlib=libc++ -Wall'

call deoplete#custom#var('clangx', 'clang_binary', '/usr/bin/clang')
call deoplete#custom#var('clangx', 'default_c_options', '--std=c11 -isysroot /Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX.sdk')
call deoplete#custom#var('clangx', 'default_cpp_options', '--std=c++20 -stdlib=libc++')

let g:ale_fix_on_save = 1
let g:ale_fixers = {
\   '*': ['remove_trailing_lines', 'trim_whitespace'],
\   'go': ['goimports', 'gofmt'],
\   'python': ['isort', 'yapf'],
\   'cpp': ['clang-format'],
\}

call lh#local_vimrc#munge('whitelist', $HOME.'/Documents/dev')

set wrap
set showbreak=\ \ \ \ \ \ >
hi NonText guifg=#0030ff ctermfg=green

set ai
set cin

set backspace=2
set wrapmargin=5

set laststatus=2

set foldenable
set foldmethod=indent

set showmatch
set hlsearch
set incsearch
set ignorecase

set listchars=tab:..
set list

set background=dark
colorscheme onedark
set t_Co=256

set colorcolumn=80

set pastetoggle=<F2>

set number
syntax on
