\   'go': ['remove_trailing_lines', 'trim_whitespace', 'goimports', 'gofmt'],
\   'rust': ['remove_trailing_lines', 'trim_whitespace', 'rustfmt'],
\   'python': ['remove_trailing_lines', 'trim_whitespace', 'isort', 'yapf'],
\}

set wrap
set showbreak=\ \ \ \ \ \ >
hi NonText guifg=#0030ff ctermfg=green

